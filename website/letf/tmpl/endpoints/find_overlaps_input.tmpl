<!DOCTYPE html>
<html lang="en">
<head>
    <title>Welcome to ETFs Data Validator</title>
    {{ template "includes" }}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#addnew').click(function () {
                addnewrow();
            });
            $('body').delegate('#del_row', 'click', function () {
                $(this).parent().parent().remove();
            });
        });

        function addnewrow() {
            var n = ($('#tbl_body tr').length - 0) + 1;
            var row = '<tr>' +
                '<td>\
                    <div class="form-group">\
                        <input class="form-control" type="text" name="stocks[' + n + ']" placeholder="AAPL">\
                    </div>\
                </td>' +
                '<td>\
                    <div class="input-group mb-3">\
                        <div class="input-group-prepend"><span class="input-group-text">$</span>\
                        </div>\
                        <input type="number" name="market_values[' + n + ']" class="form-control" placeholder = "10,000">\
                    </div>\
                </td>' +
                '<td><button type="button" class="btn mb-1 btn-danger btn-sm" id = "del_row"><span class="btn-icon-right"><i class="fa fa-close"></i></span></button></td>' +
                '</tr>';
            $('#tbl_body').append(row);
        }

    </script>
    <link href="/plugins/nestable/css/nestable.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
<div>
    <div id="main-wrapper">
        {{/* Wrapper */}}
        {{ template "wrapper" $.TemplateCustomMetadata }}

        {{/* Main Content */}}
        <div class="content-body">
            <div class="main">
                <div class="container-fluid">
                    <h1>Input your stock holdings to find an appropriate ETF(s) to replace them with</h1>

                    <section id="holdings-content">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h3 class="card-title">Input your current positions</h3>
                                        <form action="/find_overlaps.html" method="post" id="frm_data">
                                            <table class="table table-striped table table-bordered">
                                                <thead>
                                                <tr>
                                                    <th>Stock Name</th>
                                                    <th>Market Value in USD</th>
                                                    <th>
                                                        <button type="button" class="btn mb-1 btn-success btn-sm"
                                                                id="addnew">
                                                            Add<span class="btn-icon-right"><i
                                                                        class="fa fa-plus-square"></i></span>
                                                        </button>
                                                    </th>
                                                </tr>
                                                </thead>
                                                <tbody id="tbl_body">
                                                <tr>
                                                    <td>
                                                        <div class="form-group">
                                                            <input class="form-control" type="text" name="stocks[1]"
                                                                   placeholder="AAPL">
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="input-group mb-3">
                                                            <div class="input-group-prepend"><span
                                                                        class="input-group-text">$</span>
                                                            </div>
                                                            <input type="number" name="market_values[1]"
                                                                   class="form-control">
                                                        </div>
                                                    </td>
                                                    <td title="This Row Can't be Deleted"></td>
                                                </tr>
                                                </tbody>
                                            </table>
                                            <span class="input-group-btn"><input style="margin-top: 20px" type="submit"
                                                                                 value="Find ETFs!" id="sub_button"
                                                                                 title="Save the Record"
                                                                                 class="btn mb-1 btn-primary btn-lg"/></span>
                                        </form>
                                    </div>
                                    <div class="card-footer">We do not record or share your data ever. Please see <a
                                                href="faq.html">FAQs</a> for more details
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title">How to use this tool</h4>
                                        <div class="card-content">
                                            <div class="nestable">
                                                <div class="dd" id="nestable">
                                                    <ol class="dd-list">
                                                        <li class="dd-item" data-id="1">
                                                            <div class="dd-handle">1. List your investments
                                                                (stocks/ETFs)
                                                                that have lost value
                                                            </div>
                                                        </li>
                                                        <li class="dd-item" data-id="2">
                                                            <div class="dd-handle">2. For each investment, enter its
                                                                ticker
                                                                and the current value of your stake.
                                                            </div>
                                                            <ol class="dd-list">
                                                                <li class="dd-item" data-id="2a">
                                                                    <div class="dd-handle">2a. Add more assets to the
                                                                        tool
                                                                        by clicking the + icon.
                                                                    </div>
                                                                </li>
                                                            </ol>
                                                        </li>
                                                        <li class="dd-item" data-id="3">
                                                            <div class="dd-handle">3. The tool will generate ETFs ranked
                                                                by
                                                                their exposure by your selected list of assets. Click
                                                                "Find
                                                                ETFs" to see the results of the ranking.
                                                            </div>
                                                        </li>
                                                        <li class="dd-item" data-id="4">
                                                            <div class="dd-handle">4. Want to use leveraged funds?
                                                                Select
                                                                the "leverage" you are replacing.
                                                            </div>
                                                        </li>
                                                        <li class="dd-item" data-id="5">
                                                            <div class="dd-handle">5. Swap your positions with the
                                                                "swappable" ones.
                                                            </div>
                                                        </li>
                                                        <li class="dd-item" data-id="6">
                                                            <div class="dd-handle">6. Congratulations!!! You've just
                                                                harvested your capital losses while retaining similar
                                                                positions
                                                            </div>
                                                            <ol class="dd-list">
                                                                <li class="dd-item" data-id="6a">
                                                                    <div class="dd-handle">6a. You can reduce your tax
                                                                        bill
                                                                        with the harvested losses. You can also carry
                                                                        the
                                                                        harvest forward to reduce your future tax bill.
                                                                    </div>
                                                                </li>
                                                            </ol>
                                                        </li>
                                                    </ol>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section id="tutorial">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h3 class="card-title">An instructional video</h3>
                                        <video width="80%" controls>
                                            <source src="http://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4"
                                                    type="video/mp4">
                                        </video>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="card gradient-5">
                                            <div class="card-body">
                                                <h3 class="card-title text-white">Stocks Inventory</h3>
                                                <div class="d-inline-block">
                                                    <h2 class="text-white"> {{ .TotalStocksCount }} </h2>
                                                    <p class="text-white mb-0">Jan - March 2019</p>
                                                </div>
                                                <span class="float-right display-5 opacity-5"><i
                                                            class="fa fa-stop-circle"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="card gradient-1">
                                            <div class="card-body">
                                                <h3 class="card-title text-white">ETFs Inventory</h3>
                                                <div class="d-inline-block">
                                                    <h2 class="text-white"> {{ .TotalETFsCount }} </h2>
                                                    <p class="text-white mb-0">Jan - March 2019</p>
                                                </div>
                                                <span class="float-right display-5 opacity-5"><i
                                                            class="fa fa-stack-exchange"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="card gradient-7">
                                            <div class="card-body">
                                                <h3 class="card-title text-white">Providers Integrated</h3>
                                                <div class="d-inline-block">
                                                    <h2 class="text-white"> {{ .TotalProvidersCount }} </h2>
                                                    <p class="text-white mb-0">Jan - March 2019</p>
                                                </div>
                                                <span class="float-right display-5 opacity-5"><i
                                                            class="fa fa-intersex"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="card gradient-8">
                                            <div class="card-body">
                                                <h3 class="card-title text-white">Opportunities Generated</h3>
                                                <div class="d-inline-block">
                                                    <h2 class="text-white"> {{ .TotalOverlaps }} </h2>
                                                    <p class="text-white mb-0">Jan - March 2019</p>
                                                </div>
                                                <span class="float-right display-5 opacity-5"><i
                                                            class="fa fa-gears"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section id="statistics">
                    </section>
                    <section id="future">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="card">
                                    <div class="card-header">Upcoming features</div>
                                    <div class="card-body">
                                        TBD
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        {{ template "footer" }}
    </div>
</div>
</body>
</html>